<div class="container px-4 py-5 bg-light">
  <div class="  ">
    <h2 class="pb-4 m-3 text-center">We pride ourselves in provinding the best service.</h2>
  </div>
  <div class="row px-4 ">
    <% @reviews["records"].each do |review|%>
      <div class="col-sm-3 px-2 py-2 d-flex align-items-stretch ">
        <div class="card card-shadow">
          <div class="card-body review-data">
          <div class="review-header">
            <h5 class="card-title"><%= review["name"] %></h5>
            <p class="review-rating">
                <% review["rating"].to_i.times do %>
                  <i class="fa fa-star"></i>
                <% end %>
              </p>
              <h6 class="review-date"><%= review["Date"] %> </h6>
              </div>
            <p>
              <div class="comment-box">
                <% if review["comment"].length > 50 %>
                  <%= truncate(review["comment"], length: 50) %><br />
                  <%= link_to 'Read', '', class: "read-more-#{review["id"]} review-text"%>
                  
                  <script>
                    $('.read-more-<%= review["id"] %>').on('click', function(e) {
                      e.preventDefault();
                      $(this).parent().html('<%= escape_javascript review["comment"] %><br /><%= link_to 'Hide', '', class: "read-less-#{review["id"]} review-text"%>')
                    })
                    $('.read-less-<%= review["id"] %>').on('click', function(e) {
                      e.preventDefault();
                      $(this).parent().html('<%= escape_javascript truncate(review["comment"], length: 50) %>')
                    })
                  </script>
                <% else %>
                  <%= review["comment"]  %>
                <% end %>
              </div>
            </p>
          </div>
        </div>
      </div>
      <% end%> 
  </div>
</div>
